---
interface Props {
  class?: string;
  primitive?: boolean;
  transitionName?: string;
}

const { primitive, transitionName, class: className } = Astro.props;
---

<h1
  transition:name={transitionName}
  class={primitive ? undefined : `light:text-light-1 text-3xl ${className || ""}`}
>
  <slot />
</h1>
