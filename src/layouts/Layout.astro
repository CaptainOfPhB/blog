---
import "@/styles/global.css";
import "@sweetalert2/theme-borderless/borderless.min.css";
import { config } from "@/config/global";
import Footer from "@/layouts/Footer.astro";
import Header from "@/layouts/Header.astro";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={config.description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/lxgw-wenkai-lite-webfont@1.7.0/style.min.css"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title || config.title}</title>
    <ViewTransitions />
  </head>
  <body
    class:list={[
      // common
      "relative my-0 pt-12 pb-36 mx-auto max-w-5xl min-h-screen font-wenkai",
      // small screen
      "px-6 ",
      // large screen
      "lg:px-0",
      // light mode
      "bg-light-bg text-light-2",
      // dark mode
      "dark:bg-dark-bg dark:text-dark-2",
    ]}
  >
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<script>
  import { inject } from '@vercel/analytics';
  import { injectSpeedInsights } from '@vercel/speed-insights';

  inject();
  injectSpeedInsights({});
</script>

<script>
  import QRCode from 'qrcode';
  import Swal from 'sweetalert2';

  const href = window.location.href;

  QRCode
    .toDataURL(href, { margin: 1 })
    .then((base64) => {
      Swal.fire({
        title: "分享是快乐的源泉",
        showCancelButton: true,
        showConfirmButton: false,
        cancelButtonText: '取消分享',
        customClass: { cancelButton: '!bg-[#36465dfc]' },
        html: `
          <div class="text-base">
            <img id="qrcode" src="${base64}" class="w-full" />
            <button 
              onclick="downloadQRCode('${base64}')"
              class="w-full bg-[#64748b] outline-none border rounded border-dark-2 mt-4 p-2.5 text-dark-1 hover:bg-[#36465dfc] duration-300"
            >
              保存图片
            </button>
            <div class="m-4 text-dark-2 text-xl">or</div>
            <div class="flex items-center justify-between w-full border rounded border-dark-2 mt-4 text-dark-1 overflow-hidden">
              <div class="truncate p-2.5 text-left text-dark-1">${href}</div>
              <div 
                onclick="copyShortUrlToClipboard('${href}')"
                class="p-2.5 w-28 min-w-28 text-dark-1 bg-[#64748b] hover:bg-[#36465dfc] duration-300 cursor-pointer"
              >
                复制链接
              </div>
            </div>
          </div> 
        `,
      });
    })
    .catch((error) => console.error(error));
  
  window.downloadQRCode = function (base64) {
    const link = document.createElement('a');
    link.download = `${document.title}.qrcode.png`;
    link.href = base64;
    link.click();

    Swal.close();
  }

  window.copyShortUrlToClipboard = function (url) {
    if (navigator.clipboard) {
      navigator.clipboard.writeText(url);
    } else {
      const textarea = document.createElement('textarea');
      document.body.appendChild(textarea);
      textarea.style.position = 'fixed';
      textarea.style.clip = 'rect(0 0 0 0)';
      textarea.style.top = '10px';
      textarea.value = url;
      textarea.select();
      document.execCommand('copy', true);
      document.body.removeChild(textarea);
    }

    Swal.close();
  }
</script>
