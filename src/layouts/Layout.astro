---
import "@fontsource/architects-daughter";
import { config } from "@/config/global";
import Header from "@/layouts/Header.astro";

interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/lxgw-wenkai-lite-webfont@1.7.0/style.min.css"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title || config.title}</title>
    <script src="https://unpkg.com/jparticles/browser/jparticles.base.js"
    ></script>
    <script src="https://unpkg.com/jparticles/browser/particle.js"></script>
  </head>
  <body>
    <Header />
    <slot />
  </body>
</html>

<style is:global>
  @font-face {
    font-family: "MonaspaceNeon";
    src: url("../assets/MonaspaceNeon-Regular.woff") format("woff");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  html {
    margin: 50px auto;
    max-width: 1000px;
    background-color: rgb(250 250 250);
    font-family: "LXGW WenKai Lite", system-ui, sans-serif;
  }

  code {
    font-size: 14px;
    font-family:
      MonaspaceNeon,
      FiraCode,
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  u {
    text-underline-offset: 5px;
  }
</style>
