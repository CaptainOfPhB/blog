  // TODO 在这里页面加载之后，根据 storage 或者系统主题控制 icon 的显示
  document.addEventListener("astro:page-load", () => {
    setActiveClass();
    initTheme();
    addEventListenerForSVG();

    function initTheme() {
      const theme = window.localStorage.getItem("theme") as
        | "light"
        | "dark"
        | null;
      if (theme) {
        setTheme(theme);
        return;
      }

      if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
        setTheme("dark");
        return;
      }

      setTheme("light");
    }

    function addEventListenerForSVG() {
      document.querySelectorAll(".theme-icon").forEach((svg) => {
        const icon = svg as SVGElement;
        icon.addEventListener("click", () =>
          setTheme(icon.dataset.theme as "light" | "dark", true)
        );
      });
    }

    function setTheme(theme: "light" | "dark", shouldCache?: boolean) {
      const darkIcon = document.getElementById("dark-icon")!;
      console.log("🚀 -> setTheme -> darkIcon:", darkIcon);
      const lightIcon = document.getElementById("light-icon")!;
      console.log("🚀 -> setTheme -> lightIcon:", lightIcon);

      if (shouldCache) {
        window.localStorage.setItem("theme", theme);
      }

      if (theme === "light") {
        lightIcon.classList.add("hidden");
        darkIcon.classList.remove("hidden");
        document.documentElement.classList.remove("dark");
      } else {
        darkIcon.classList.add("hidden");
        lightIcon.classList.remove("hidden");
        document.documentElement.classList.add("dark");
      }
    }

    function setActiveClass() {
      const nav = getNavFromUrl();
      const navs = document.querySelectorAll("#site-nav a");
      navs.forEach((n) => {
        if (n.getAttribute("href") === nav) {
          n.classList.add("underline");
        }
      });
    }

    function getNavFromUrl() {
      const nav = window.location.pathname.split("/")[1];
      return "/" + nav;
    }
  });
</script>
